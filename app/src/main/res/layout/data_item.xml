<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/data_item_total_height"
    android:layout_margin="@dimen/data_item_total_margin"
    android:background="@drawable/introduce_background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/data_item_head_height"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/recycle_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/data_item_title_padding_start"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/recycle_number"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/black" />

    </LinearLayout>

    <TextView
        android:id="@+id/recycle_description"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/data_item_description_padding_start"
        android:textColor="@color/black" />
</LinearLayout>