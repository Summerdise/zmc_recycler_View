<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/recycler_entry"
        android:layout_width="@dimen/main_recycler_entry_width"
        android:layout_height="@dimen/main_recycler_entry_height"
        android:background="@color/grey"
        android:gravity="center"
        android:text="@string/recyclerview_entry"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.25" />

    <TextView
        android:id="@+id/header_recycler_entry"
        android:layout_width="@dimen/main_header_recycler_entry_width"
        android:layout_height="@dimen/main_header_recycler_entry_height"
        android:background="@color/grey"
        android:gravity="center"
        android:text="@string/header_recyclerview_entry"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recycler_entry"
        app:layout_constraintVertical_bias="0.3" />

    <TextView
        android:id="@+id/image_recycler_entry"
        android:layout_width="@dimen/main_image_recycler_entry_width"
        android:layout_height="@dimen/main_image_recycler_entry_height"
        android:background="@color/grey"
        android:gravity="center"
        android:text="@string/image_recyclerview_entry"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header_recycler_entry" />

</androidx.constraintlayout.widget.ConstraintLayout>