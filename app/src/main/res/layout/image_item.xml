<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/image_item_total_height"
    android:layout_margin="@dimen/image_item_total_margin"
    android:background="@drawable/introduce_background"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/image_recycle_image"
        android:layout_width="@dimen/image_item_image_width"
        android:layout_height="@dimen/image_item_image_height"
        android:padding="@dimen/image_item_image_padding"
        android:scaleType="centerInside" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/image_item_title_height"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/image_recycle_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/image_item_title_padding_start"
                android:textColor="@color/black" />


            <TextView
                android:id="@+id/image_recycle_number"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/black" />

        </LinearLayout>

        <TextView
            android:id="@+id/image_recycle_description"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/image_item_description_padding_start"
            android:textColor="@color/black" />

    </LinearLayout>


</LinearLayout>